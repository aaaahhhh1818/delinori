<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.noriteo.delinori.saleboard.mapper.SaleBoardMapper">

    <insert id="insert">
        insert tbl_saleboard (title,content,writer)
        values (#{title},#{content},#{writer})
        <selectKey order="AFTER" resultType="long" keyProperty="sno">
            select last_insert_id()
        </selectKey>
    </insert>

    <select id="getList" resultType="com.noriteo.delinori.saleboard.domain.SaleBoard">
        select * from tbl_saleboard
        order by sno desc limit #{skip}, #{size}
    </select>

    <select id="getCount" resultType="int">
        select count(sno) from tbl_saleboard
    </select>

    <select id="select" resultType="com.noriteo.delinori.saleboard.domain.SaleBoard">
        select * from tbl_saleboard where sno = #{sno}
    </select>

</mapper>